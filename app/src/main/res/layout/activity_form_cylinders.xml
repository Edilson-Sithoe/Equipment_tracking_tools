                <RadioButton
                    android:id="@+id/idChkNoC"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textLongMessage"
                    android:onClick="onRadioButtonClicked_cy"
                    android:text="No"
                    android:textColor="@color/color_txt"
                    android:textColorHint="@color/cinzento"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck"></RadioButton>
            </RadioGroup>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/idTVTxtAVGC"
